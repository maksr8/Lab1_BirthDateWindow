<UserControl x:Class="Lab1_BirthDateWindow.Views.BirthDateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab1_BirthDateWindow.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Times New Roman" FontSize="18">Choose your birth date:</Label>
        <DatePicker Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" FontFamily="Times New Roman" FontSize="16"></DatePicker>
        <Label Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Times New Roman" FontSize="20">Your age is 19</Label>
        <Label Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Times New Roman" FontSize="20" Visibility="Visible" MouseDoubleClick="Label_MouseDoubleClick">HAPPY BIRTHDAY!</Label>
        <Label Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Times New Roman" FontSize="20">Your Zodiac sign:</Label>

        <Grid Grid.Row="5" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="0 0 10 0" VerticalAlignment="Bottom" FontFamily="Times New Roman" FontSize="18">Western system:</Label>
            <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="10 0 0 0" VerticalAlignment="Bottom" FontFamily="Times New Roman" FontSize="18">Chinese system:</Label>

            <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="0 0 10 0" VerticalAlignment="Bottom" FontFamily="Times New Roman" FontSize="20">Lion</Label>
            <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="10 0 0 0" VerticalAlignment="Bottom" FontFamily="Times New Roman" FontSize="20">Pitushara</Label>
            
        </Grid>

    </Grid>
</UserControl>
